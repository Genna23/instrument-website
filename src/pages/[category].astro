const { category } = Astro.params

const { name, genitive } = Astro.props

const genitiveUpper = genitive.charAt(0).toUpperCase() + genitive.slice(1)

const cards = await Astro.glob('../cards/*.md')

const categoryCards = cards.filter((card) => card.frontmatter.category === category)

const description = `Аренда ${genitiveUpper} в Витебске. Широкий выбор качественных инструментов для любых задач. Удобные условия аренды и доступные цены. Заходите и выбирайте подходящие ${name} для ваших проектов!`

---

<DefaultLayout keyword={name} {description}>

    <Catalog cards={categoryCards} />

</DefaultLayout>


