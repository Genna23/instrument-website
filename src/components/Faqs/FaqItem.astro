---

const { question, answer } = Astro.props

---

<div class="w-full py-4 border-b-2 border-black cursor-pointer space-y-4 question">
    <div class="flex justify-between">
        <h3 class="text-3xl">
            { question }
        </h3>
    </div>
<div class="answer hidden">
    <p class="text-xl">
        { answer }
    </p>
</div>
</div>

